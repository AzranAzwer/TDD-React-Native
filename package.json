{
  "name": "TDD",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest tests/**/*.spec.js"
  },
  "dependencies": {
    "jest": "^24.8.0",
    "react": "16.8.3",
    "react-native": "0.62.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "@jonny/react-native-mock": "^0.4.2",
    "babel-jest": "^24.8.0",
    "detox": "^12.9.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.1",
    "metro-react-native-babel-preset": "^0.54.1",
    "mocha": "^6.1.4",
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "/Projects/react_tdd/TDD/tests/setup.js"
    ]
  },
  "detox": {
    "test-runner": "mocha",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/TDD.app",
        "build": "xcodebuild -project ios/TDD.xcodeproj -scheme TDD -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -UseModernBuildSystem=NO",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  }
}
